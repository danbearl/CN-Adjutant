<h1>Clients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.company %></td>
    <td><%= link_to "View", client %></td>
    <td><%= link_to "Edit", edit_client_path(client) %></td>
    <td><%= link_to "Delete", client, :confirm => 'Deleting is irreversible. Are you sure you want to continue?', :method => :delete %></td>
  </tr>
<% end %>
</table>
