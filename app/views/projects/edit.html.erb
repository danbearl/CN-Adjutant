<h1>Edit Project <%= project.id %></h1>
  
<%= form_for project, :url => {:action => "update"} do |f| %>

  <% if project.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <%= project.errors.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %> 
  </div>

  <div class="field">
    <%= f.label :statement_of_work %><br />
    <%= f.text_area :statement_of_work %>
  </div>

  <div class="field">
    <%= f.label :estimated_start_date %><br />
    <%= f.date_select :estimated_start_date %>
  </div>

  <div class="field">
    <%= f.label :actual_start_date %><br />
    <%= f.date_select :actual_start_date %>
  </div>
  
  <div class="field">
    <%= f.label :estimated_completion_date %><br />
    <%= f.date_select :estimated_completion_date %>
  </div>

  <div class="field">
    <%= f.label :actual_completion_date %><br />
    <%= f.date_select :actual_completion_date %>
  </div>

  <div class="field">
    <%= f.label :rate %><br />
    <%= f.text_field :rate %>
  </div>

  <div class="field">
    <%= f.label :estimated_cost %><br />
    <%= f.text_field :estimated_cost %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', client_project_path(project.client, project) %>
