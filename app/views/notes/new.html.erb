<h1>Create New Note</h1>

<%= form_for @note, :url => {:action => "create"}  do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </div>
  
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %><br />
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', project_path(@project) %>
